<%= form_tag(root_path, :method => 'post', id:"ess" ) do %>
<div class="input-form">
    <a name="ess">論文</a>
    <div class="input-ind"><label for="title">論文の題名</label><%= text_field_tag :essay_title, '', class: 'input-text' %></div>
    <div class="input-ind"><label for="title">筆者の名前</label><%= text_field_tag :essay_author, '', class: 'input-text' %></div>
     <div class="input-ind"><label for="title">本の題名　</label><%= text_field_tag :book_title, '', class: 'input-text' %></div>
     <div class="input-ind"><label for="name">本の編者</label><%= text_field_tag :book_author, '', class: 'input-text' %></div>
     <div class="input-ind"><label for="year">出版年　</label><%= text_field_tag :year, '', class: 'input-text' %></div>
     <div class="input-ind"><label for="publisher">出版社　</label><%= text_field_tag :publisher, '', class: 'input-text' %></div>
     <%= button_tag '書誌情報を整形する', class: 'shaping' %>
 <% end %>
 
 <div class="result-block">
     <% unless params[:year].nil? %>
     <%= text_area_tag :result, @result3 %>
     <%= button_tag 'テキストをコピー', class: 'copy-source' %>
    <% end %>
    </div>
 </div>